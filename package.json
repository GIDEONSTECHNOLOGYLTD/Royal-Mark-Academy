{
  "name": "royal-mark-academy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node prebuild-frontend.cjs || (mkdir -p /opt/render/project/src/dist && cp -r static-placeholder/* /opt/render/project/src/dist/)",
    "frontend-build": "npm install vite@4.3.9 @vitejs/plugin-react@4.0.0 tailwindcss postcss autoprefixer --no-save && npx vite build",
    "copy-dist": "mkdir -p /opt/render/project/src/dist && cp -r dist/* /opt/render/project/src/dist/ 2>/dev/null || echo 'Not on Render, skipping copy'",
    "render-build": "node prebuild-frontend.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "seed:admin": "node server/seeders/createAdminUser.js",
    "start": "node server/index.js",
    "prod:build": "npm run build && npm run start"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.3",
    "framer-motion": "^12.23.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.12",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "vite": "^7.0.4"
  }
}
